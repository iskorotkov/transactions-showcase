<Window x:Class="TransactionsShowcase.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TransactionsShowcase"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <GroupBox Header="Имя">
            <TextBox Name="NameBox" />
        </GroupBox>

        <Button Content="Начать транзакцию"
                Click="BeginTransaction" />

        <Button Content="Проверить, есть ли такой элемент"
                Click="CheckIfExists" />

        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Уже существует: " />
            <CheckBox IsEnabled="False"
                      IsThreeState="True"
                      IsChecked="{x:Null}"
                      Name="IsExistsBox" />
        </StackPanel>

        <Button Content="Добавить"
                Click="Create" />
    </StackPanel>
</Window>